@model V2.Models.Jouer

<head>
    <title>Create</title>
    <style>
        .hidden {
            display: none;
        }
    </style>

</head>
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Jouer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">Artiste</span>
            <div class="col-md-10">
                @Html.DropDownList("ArtisteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArtisteID, "", new { @class = "text-danger" })
                @Html.ActionLink("Ajouter un nouvel artiste", "Create", "Artistes")
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Instrument</span>

            <div class="col-md-10">
                @Html.DropDownList("InstrumentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InstrumentID, "", new { @class = "text-danger" })
                @Html.ActionLink("Ajouter un nouvel instrument", "Create", "Instruments")
            </div>
        </div>

        <div class="hidden">
            <div class="form-group">
                <span class="control-label col-md-2">Version</span>
                <div class="col-md-10">
                    @Html.DropDownList("VersionID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.VersionID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
