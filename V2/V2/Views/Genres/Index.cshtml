@model IEnumerable<V2.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Request.IsAuthenticated && User.IsInRole("Administrateur"))
{ 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        @if (Request.IsAuthenticated && User.IsInRole("Administrateur"))  { <th></th>}
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
@if (Request.IsAuthenticated && User.IsInRole("Administrateur")) { 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GenreID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GenreID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GenreID })
        </td>
}
    </tr>
}

</table>
