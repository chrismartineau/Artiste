@model V2.Models.Biographie

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<style>
    .longarea{
        height:300px;
        width:150px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Biographie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BiographieID)

        <div class="form-group">
            <span class="control-label col-md-2" style="font-weight:bold">Biographie</span>
            @*@Html.LabelFor(model => model.Biographie1, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Biographie1, 10, 70,new { htmlAttributes = new { @class = "longarea" } })
                @Html.ValidationMessageFor(model => model.Biographie1, "", new { @class = "text-danger" })
            </div>
        </div>    
        <div class="form-group">
            <span class="control-label col-md-2" style="font-weight:bold">Artiste</span>
            <div class="col-md-10">
                @Html.DropDownList("ArtisteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArtisteID, "", new { @class = "text-danger" })
            </div>
        </div>  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
